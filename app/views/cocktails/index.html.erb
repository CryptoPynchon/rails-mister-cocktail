<%= render 'banner'%>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-description" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container-create">
    <div class="row-create">
      <p>Creation is one of Nature's mandates.</p>
      <%= link_to "Experiment", new_cocktail_path, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
</div>

